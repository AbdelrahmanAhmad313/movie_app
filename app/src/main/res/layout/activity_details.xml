<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D415F"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/white_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:breakStrategy="simple"
        android:ellipsize="end"
        android:fontFamily="@font/alata"
        android:maxLines="3"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/poster_inside"
        app:layout_constraintTop_toBottomOf="@id/background"
        tools:text="The fantastic 4" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/movie_name"
        app:layout_constraintTop_toBottomOf="@id/movie_name"
        tools:text="35/20/2025" />

    <ImageView
        android:id="@+id/poster_inside"
        android:layout_width="160dp"
        android:layout_height="212dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintTop_toBottomOf="@id/background"
        tools:src="@tools:sample/backgrounds/scenic" />

    <View
        android:id="@+id/trailer_holder"
        android:background="@drawable/rounded"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/movie_name"
        app:layout_constraintTop_toBottomOf="@id/date"
        android:layout_width="100dp"
        android:layout_height="30dp"/>
    <ImageView
        app:layout_constraintBottom_toBottomOf="@id/trailer_holder"
        app:layout_constraintTop_toTopOf="@id/trailer_holder"
        app:layout_constraintStart_toStartOf="@id/trailer_holder"
        android:src="@drawable/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginStart="12dp"
        android:id="@+id/trailer"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="@id/trailer_holder"
        app:layout_constraintTop_toTopOf="@id/trailer_holder"
        app:layout_constraintEnd_toEndOf="@id/trailer_holder"
        app:layout_constraintStart_toStartOf="@id/trailer_holder"
        android:textColor="@color/white"
        android:text="Trailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>